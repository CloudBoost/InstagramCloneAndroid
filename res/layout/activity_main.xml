<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <include layout="@layout/include_list_viewpager" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="bottom"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:weightSum="5" >

        <ImageButton
            android:id="@+id/home_button"
            style="@style/dock_buttons"
            android:contentDescription="@string/abc_capital_on"
            android:src="@drawable/dock_home" />

        <ImageButton
            android:id="@+id/search_button"
            style="@style/dock_buttons"
            android:contentDescription="@string/abc_capital_on"
            android:src="@drawable/dock_search" />

        <ImageButton
            android:id="@+id/camera_button"
            style="@style/dock_buttons"
            android:contentDescription="@string/abc_capital_on"
            android:src="@drawable/dock_camera" />

        <ImageButton
            android:id="@+id/activity_button"
            style="@style/dock_buttons"
            android:contentDescription="@string/abc_capital_on"
            android:src="@drawable/dock_news" />

        <ImageButton
            android:id="@+id/profile_button"
            style="@style/dock_buttons"
            android:contentDescription="@string/abc_capital_on"
            android:src="@drawable/dock_profile" />
    </LinearLayout>

</FrameLayout>